<script>
function check() {
  var checkBox = document.getElementById("checbox");
  var btno = document.getElementById("btng");
  var btnt = document.getElementById("btnh");
  var btnth = document.getElementById("btni");
  var btnf = document.getElementById("btnj");
  var btnfi = document.getElementById("btnk");
  var btns = document.getElementById("btnl");
  
  var text1 = document.getElementsByClassName("text1");
  var text2 = document.getElementsByClassName("text2");
  for (var i = 0; i < text1.length; i++) {
    if (checkBox.checked == true) {
      text1[i].style.display = "block";
      text2[i].style.display = "none";
      btno.style.display="none";
      btnt.style.display="block";
      btnth.style.display="none";
      btnf.style.display="block";
      btnfi.style.display="none";
      btns.style.display="block";
    } else if (checkBox.checked == false) {
      text1[i].style.display = "none";
      text2[i].style.display = "block";
      btno.style.display="block";
      btnt.style.display="none";
      btnth.style.display ="block";
      btnf.style.display ="none";
      btnfi.style.display ="block";
      btns.style.display ="none";
    }
  }
}
check();                               
</script>
